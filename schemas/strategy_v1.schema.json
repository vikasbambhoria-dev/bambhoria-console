{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bambhoria.dev/schemas/strategy_v1.schema.json",
  "title": "Bambhoria Strategy",
  "type": "object",
  "required": ["name", "version", "created", "components"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "created": { "type": "string", "minLength": 1 },
    "components": {
      "type": "object",
      "required": ["indicators", "ai_model", "entry_logic", "exit_logic", "risk"],
      "properties": {
        "indicators": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "ai_model": { "type": "string", "minLength": 1 },
        "entry_logic": { "type": "string", "minLength": 1 },
        "exit_logic": { "type": "string", "minLength": 1 },
        "risk": {
          "type": "object",
          "required": ["max_loss", "max_positions", "cooldown_secs"],
          "properties": {
            "max_loss": { "type": "number", "minimum": 0 },
            "max_positions": { "type": "integer", "minimum": 1 },
            "cooldown_secs": { "type": "number", "minimum": 0 },
            "trailing_stop_pct": { "type": "number", "exclusiveMinimum": 0, "maximum": 0.2 },
            "take_profit_rr": { "type": "number", "minimum": 1 },
            "per_trade_risk_pct": { "type": "number", "exclusiveMinimum": 0, "maximum": 0.1 }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "meta": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
